<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="@android:integer/config_shortAnimTime"
    android:color="@color/now_playing">

    <item android:id="@android:id/mask"
        android:drawable="@color/list_choice_pressed_bg_light" />
    <item>
        <selector>
            <item android:state_checkable="false" android:drawable="@color/item_background"/>
        </selector>
    </item>
    <item>
        <selector>
            <item android:state_activated="true" android:drawable="@color/list_choice_pressed_bg_light"/>
        </selector>
    </item>
    <item>
        <selector>
            <item android:state_activated="false" android:drawable="@color/now_playing"/>
        </selector>
    </item>
</ripple>